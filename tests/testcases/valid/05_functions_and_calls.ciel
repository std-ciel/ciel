fn add(int a, int b) -> int { return a + b; }

fn factorial(int n) -> int {
    if (n <= 1) return 1;
    return n * factorial(n - 1);
}

fn gcd(int a, int b) -> int {
    if (b == 0) return a;
    return gcd(b, a % b);
}

fn void_callee() -> void { int local = 42; }

fn takes_array(int arr[3]) -> int { return arr[0] + arr[1] + arr[2]; }

struct RetPoint { int x; int y; };
fn make_point(int x, int y) -> struct RetPoint { struct RetPoint p; p.x = x; p.y = y; return p; }

fn inc_ptr(struct RetPoint* p) -> void { p->x = p->x + 1; }

fn get_grade(int score) -> char {
    if (score >= 90) return 'A';
    if (score >= 80) return 'B';
    if (score >= 70) return 'C';
    if (score >= 60) return 'D';
    return 'F';
}

