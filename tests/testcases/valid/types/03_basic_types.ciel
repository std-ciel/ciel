// Basic type tests

int main() {
    // Void (in function context)
    void* vptr = (void*)0;

    // Integer types
    int i = 0;
    unsigned u = 0;

    // Character type
    char c = 'x';

    // Boolean type
    bool b = true;

    // Floating point type
    float f = 1.5;

    // Type mixing in expressions
    int result1 = i + u;
    float result2 = f + i;
    char message[20] = "Hello, CIEL!";

    // Validate values
    if (result1 != 0) return 1;  // 0 + 0
    if (result2 != 1.5) return 2;  // 1.5 + 0
    if (c != 'x') return 3;
    if (!b) return 4;  // b should be true

    return 0;
}
