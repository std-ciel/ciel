/**
 * Test int and char types used as boolean conditions.
 * Any non-zero value should be treated as true.
 * Zero should be treated as false.
 */

int main() {
    // 1. if with int
    int a = 5;
    int b = 0;
    int result = 0;

    if (a) {
        result = result + 1; // Should execute
    } else {
        result = result + 100;
    }

    if (b) {
        result = result + 100;
    } else {
        result = result + 1; // Should execute
    }

    // 2. if with char
    char c = 'a';
    char d = '\0'; // Null char

    if (c) {
        result = result + 1; // Should execute
    } else {
        result = result + 100;
    }

    if (d) {
        result = result + 100;
    } else {
        result = result + 1; // Should execute
    }

    // 3. while with int
    int count = 5;
    while (count) {
        result = result + 1;
        count = count - 1;
    }
    // result should have increased by 5

    // 4. while with char
    char char_count = (char)3;
    while (char_count) {
        result = result + 1;
        char_count = (char)(char_count - 1);
    }
    // result should have increased by 3

    // 5. for loop condition with int
    for (int i = 5; i; i = i - 1) {
        result = result + 1;
    }
    // result should have increased by 5

    // 6. do-while with int
    int do_count = 2;
    do {
        result = result + 1;
        do_count = do_count - 1;
    } while (do_count);
    // result should have increased by 2

    // 7. Ternary operator
    int t1 = 10;
    int t2 = 0;

    int r1 = t1 ? 10 : 20; // Should be 10
    int r2 = t2 ? 10 : 20; // Should be 20

    if (r1 == 10) result = result + 1;
    if (r2 == 20) result = result + 1;

    char tc1 = 'x';
    int r3 = tc1 ? 30 : 40; // Should be 30
    if (r3 == 30) result = result + 1;

    // 8. Expressions
    int x = 5;
    int y = -5;
    if (x + y) { // 0 -> false
        result = result + 100;
    } else {
        result = result + 1; // Should execute
    }

    if (x - 4) { // 1 -> true
        result = result + 1; // Should execute
    }

    // Expected result calculation:
    // 1. if int: +1 +1 = 2
    // 2. if char: +1 +1 = 2 (total 4)
    // 3. while int: +5 (total 9)
    // 4. while char: +3 (total 12)
    // 5. for int: +5 (total 17)
    // 6. do-while int: +2 (total 19)
    // 7. ternary: +1 +1 +1 = 3 (total 22)
    // 8. expr: +1 +1 = 2 (total 24)

    if (result == 24) {
        return 0;
    }
    return result;
}
