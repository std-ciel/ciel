// For loops with complex conditions

int main() {
    int sum = 0;

    // Test 1: For loop with logical AND in condition
    for (int i = 0; i < 10 && sum < 50; i = i + 1) {
        sum = sum + 10;
    }

    // Test 2: For loop with logical OR in condition
    bool done = false;
    for (int i = 0; !done && i < 100; i = i + 1) {
        if (i == 50) {
            done = true;
        }
        sum = sum + 1;
    }

    // Validate: Test1 adds 50 (5 iterations), Test2 adds 51 (i=0..50) = 50 + 51 = 101
    if (sum != 101) return 1;

    return 0;
}
