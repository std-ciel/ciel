// Test: Lambda with single capture and no parameters
// Expected: Should call constructor with capture value, access capture in body
int printf(char* format, ...);

int main() {
    printf("Test: Lambda with single capture\n");
    
    int x;
    x = 42;

    // Lambda with single capture
    [a = x] get_x(int param) -> int {
        return a;
    };

    // Call the lambda
    int result = get_x(0);

    printf("Result: %d\n", result);
    printf("Expected: 42\n");

    return 0;
}
