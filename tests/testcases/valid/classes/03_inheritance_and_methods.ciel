// Test inheritance and method calls

class Animal {
    protected:
        int age;
        char* name;

    public:
        Animal(int a) {
            this->age = a;
            this->name = (char *)0;
        }

        int get_age() {
            return this->age;
        }

        void set_age(int a) {
            this->age = a;
            return;
        }

        void make_sound() {
            return;
        }
};

class Dog : public Animal {
    private:
        int breed;

    public:
        Dog(int a, int b) {
            this->age = a;
            this->breed = b;
        }

        void bark() {
            return;
        }

        int get_breed() {
            return this->breed;
        }

        void make_sound() {
            return;
        }
};

class Cat : public Animal {
    private:
        bool indoor;

    public:
        Cat(int a, bool i) {
            this->age = a;
            this->indoor = i;
        }

        void meow() {
            return;
        }

        bool is_indoor() {
            return this->indoor;
        }
};

class Shape {
    protected:
        int x;
        int y;

    public:
        Shape(int nx, int ny) {
            this->x = nx;
            this->y = ny;
        }

        void move(int dx, int dy) {
            this->x = this->x + dx;
            this->y = this->y + dy;
            return;
        }

        int area() {
            return 0;
        }
};

class Rectangle : public Shape {
    private:
        int width;
        int height;

    public:
        Rectangle(int nx, int ny, int w, int h) {
            this->x = nx;
            this->y = ny;
            this->width = w;
            this->height = h;
        }

        int area() {
            return this->width * this->height;
        }

        int perimeter() {
            return 2 * (this->width + this->height);
        }
};

class Circle : public Shape {
    private:
        int radius;

    public:
        Circle(int nx, int ny, int r) {
            this->x = nx;
            this->y = ny;
            this->radius = r;
        }

        int area() {
            return 3 * this->radius * this->radius;
        }

        int get_radius() {
            return this->radius;
        }
};

int main() {
    // Test Animal hierarchy
    class Dog dog;
    dog.set_age(5);
    int dog_age = dog.get_age();
    dog.bark();
    dog.make_sound();
    int breed = dog.get_breed();

    class Cat cat;
    cat.set_age(3);
    int cat_age = cat.get_age();
    cat.meow();
    bool is_indoor_cat = cat.is_indoor();

    // Test Shape hierarchy
    class Rectangle rect;
    rect.move(10, 20);
    int rect_area = rect.area();
    int rect_perimeter = rect.perimeter();

    class Circle circ;
    circ.move(5, 5);
    int circ_area = circ.area();
    int radius = circ.get_radius();

    return 0;
}
