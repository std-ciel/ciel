// Test class inheritance

class Base {
    private:
        int base_private;
    protected:
        int base_protected;
    public:
        int base_public;
        void base_method() { base_public = 0; }
};

class Derived : public Base {
    private:
        int derived_private;
    public:
        int derived_public;
        void derived_method() { derived_public = 0; }
};

class ProtectedDerived : protected Base {
    public:
        void method() { base_public = 1; }
};

class PrivateDerived : private Base {
    public:
        void method() {}
};

// Multiple levels of inheritance
class GrandChild : public Derived {
    public:
        void grandchild_method() { derived_public = 2; }
};

// Classes with constructors
class Point {
    private:
        int x;
        int y;
    public:
        Point(int nx, int ny) { x = nx; y = ny; }
        void set(int nx, int ny) { x = nx; y = ny; }
};

class Rectangle : public Point {
    private:
        int width;
        int height;
    public:
        Rectangle(int x, int y, int w, int h) { width = w; height = h; }
        int area() { return width * height; }
};

int main() {
    class Base b;
    class Derived d;
    class GrandChild gc;
    
    // Pointers
    class Base* b_ptr;
    class Derived* d_ptr;
    
    return 0;
}
