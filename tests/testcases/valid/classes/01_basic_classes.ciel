// Test basic class declarations and method calls

class Calculator {
    private:
        int value;

    public:
        Calculator(int v) {
            this->value = v;
        }

        int get_value() {
            return this->value;
        }

        void set_value(int v) {
            this->value = v;
            return;
        }

        int add(int x) {
            return this->value + x;
        }

        int multiply(int x) {
            return this->value * x;
        }
};

class Point {
    private:
        int x;
        int y;

    public:
        Point() {
            this->x = 0;
            this->y = 0;
        }
        Point(int nx, int ny) {
            this->x = nx;
            this->y = ny;
        }
        Point(int nx) {
            this->x = nx;
            this->y = 0;
        }
        int get_x() {
            return this->x;
        }

        int get_y() {
            return this->y;
        }

        void set_x(int nx) {
            this->x = nx;
            return;
        }

        void set_y(int ny) {
            this->y = ny;
            return;
        }

        void move(int dx, int dy) {
            this->x = this->x + dx;
            this->y = this->y + dy;
            return;
        }
};

class Counter {
    private:
        int count;

    public:
        Counter() {
            this->count = 0;
        }

        void increment() {
            this->count = this->count + 1;
            return;
        }

        void decrement() {
            this->count = this->count - 1;
            return;
        }

        int get_count() {
            return this->count;
        }

        void reset() {
            this->count = 0;
            return;
        }
};

int main() {
    // Create objects and call methods
    class Calculator calc;
    int val = calc.get_value();
    calc.set_value(100);
    int sum = calc.add(50);
    int product = calc.multiply(2);

    // Point object method calls
    class Point p;
    int px = p.get_x();
    int py = p.get_y();
    p.set_x(10);
    p.set_y(20);
    p.move(5, 5);

    // Counter object method calls
    class Counter counter;
    counter.increment();
    counter.increment();
    counter.decrement();
    int current = counter.get_count();
    counter.reset();

    // Chained method calls
    class Point p2;
    class Point p4{};
    class Point p5{3};
    class Point p3{4, 6};
    class Point p6{2, 8};
    p2.set_x(p.get_x());
    p2.set_y(p.get_y());

    return 0;
}
