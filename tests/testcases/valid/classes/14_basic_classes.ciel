// Test basic class features

class Simple {
    public:
        int x;
        void set_x(int val) { this->x = val; }
};

class WithPrivate {
    private:
        int priv;
    public:
        int pub;
        void set_priv(int val) { this->priv = val; }
};

class WithProtected {
    private:
        int priv;
    protected:
        int prot;
    public:
        int pub;
};

class WithMethods {
    private:
        int data;
    public:
        void set_data(int val) { this->data = val; }
        int get_data() { return this->data; }
        void process() { this->data = this->data + 1; }
};

// Class with constructor
class Point {
    private:
        int x;
        int y;
    public:
        Point(int nx, int ny) { this->x = nx; this->y = ny; }
        void move(int dx, int dy) { this->x = this->x + dx; this->y = this->y + dy; }
};

// Class with multiple methods
class Counter {
    private:
        int count;
    public:
        Counter() { this->count = 0; }
        void increment() { this->count = this->count + 1; }
        void decrement() { this->count = this->count - 1; }
        void reset() { this->count = 0; }
        int get_count() { return this->count; }
};

int main() {
    class Simple s;
    class WithPrivate wp;
    class WithProtected wpr;
    class Point p;
    class Counter c;

    // Pointers to classes
    class Simple* s_ptr;
    class Point* p_ptr;

    return 0;
}
