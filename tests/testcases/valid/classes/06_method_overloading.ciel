// Test method overloading in classes

class Printer {
    public:
        // Overloaded print methods
        void print(int x) {
            return;
        }

        void print(float x) {
            return;
        }

        void print(char c) {
            return;
        }

        void print(bool b) {
            return;
        }

        void print(int x, int y) {
            return;
        }

        void print(char* str) {
            return;
        }
};

class Math {
    public:
        // Overloaded add methods
        int add(int a, int b) {
            return a + b;
        }

        float add(float a, float b) {
            return a + b;
        }

        int add(int a, int b, int c) {
            return a + b + c;
        }

        // Overloaded multiply methods
        int multiply(int a, int b) {
            return a * b;
        }

        float multiply(float a, float b) {
            return a * b;
        }
};

class Converter {
    public:
        // Overloaded convert methods with different parameter types
        int convert(int x) {
            return x;
        }

        int convert(float f) {
            return 0;
        }

        int convert(char c) {
            return 0;
        }

        int convert(bool b) {
            return 0;
        }

        // Overloaded with pointer parameters
        int convert(int* ptr) {
            return 0;
        }

        int convert(int** ptr) {
            return 0;
        }
};

struct Point {
    int x;
    int y;
};

class Shape {
    public:
        // Overloaded methods with struct parameters
        void draw(struct Point p) {
            return;
        }

        void draw(struct Point p, int scale) {
            return;
        }

        void draw(struct Point* points, int count) {
            return;
        }
};

int main() {
    // Test Printer overloads
    class Printer printer;
    printer.print(42);
    printer.print(3.14);
    printer.print('x');
    printer.print(true);
    printer.print(10, 20);
    printer.print((char *)0);

    // Test Math overloads
    class Math math;
    int int_sum = math.add(5, 10);
    float float_sum = math.add(2.5, 3.5);
    int triple_sum = math.add(1, 2, 3);
    int int_product = math.multiply(4, 5);
    float float_product = math.multiply(2.0, 3.0);

    // Test Converter overloads
    class Converter conv;
    int r1 = conv.convert(100);
    int r2 = conv.convert(3.14);
    int r3 = conv.convert('a');
    int r4 = conv.convert(false);
    int* ptr = (int *)0;
    int r5 = conv.convert(ptr);
    int** dptr = (int **)0;
    int r6 = conv.convert(dptr);

    // Test Shape overloads
    class Shape shape;
    struct Point p;
    shape.draw(p);
    shape.draw(p, 2);
    struct Point* points = (struct Point *)0;
    shape.draw(points, 5);

    return 0;
}
